@Library('my-shared-library@main') _

pipeline{

    agent any

    parameters{
        choice(name: 'action', choices: 'create\ndelete', description: 'Choose create/Destroy')
        string(name: 'aws_account_id', description: 'AWS Account ID', defaultValue: '211125402309')
        string(name: 'Region', description: 'Region of ECR', defaultValue: 'eu-west-3')
        string(name: 'ECR_REPO_NAME', description: 'name of the ECR', defaultValue: 'isebastienstore')
    }
    environment{

        ACCESS_KEY = credentials('AWS_ACCESS_KEY_ID')
        SECRET_KEY = credentials('AWS_SECRET_KEY_ID')
    }

    stages{
        stage('git Checkout'){
            when { expression {  params.action == 'create' } }
            steps{
                script{
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/isebastienstore/ci-cd-app.git"
                    )
                }
            }
        }

        stage('clean'){
            when { expression {  params.action == 'create' } }
            steps{
                script{
                    clean()
                }
            }
        }
        stage('Debug Environment') {
            steps {
                script {
                    sh 'env | grep AWS'
                }
            }
        }

        stage('Initializing Terraform'){
            steps{
                script{
                    dir('eks_module'){
                        bat 'terraform init'
                    }
                }
            }
        }
        stage('Formatting Terraform Code'){
            steps{
                script{
                    dir('eks_module'){
                        bat 'terraform fmt'
                    }
                }
            }
        }
        stage('Validating Terraform'){
            steps{
                script{
                    dir('eks_module'){
                        bat 'terraform validate'
                    }
                }
            }
        }
        stage('Previewing the Infra using Terraform'){
            steps{
                script{
                    dir('eks_module'){
                        bat 'terraform plan'
                    }
                    input(message: "Are you sure to proceed?", ok: "Proceed")
                }
            }
        }
    }
}
